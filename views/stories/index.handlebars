<h4>Public Stories</h4>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        <a href="/stories/{{id}}/edit" class="btn-floating halfway-fab red">
          <i class="material-icons">mode_edit</i>
        </a>
      </div>
      <div class="card-content">
        <h5 class="center-align">{{title}}</h5>
        <p class="story-text">{{stripTags (trunc body 100)}}</p>
      </div>
      <div class="center-align">
        <div class="chip">
          <img src="{{user.image}}">{{user.firstName}} {{user.lastName}}
        </div>
      </div>
      <br>
      <div class="card-action center-align">
        <a href="/stories/{{id}}/show">
          <i class="material-icons right">more_horiz</i>More
        </a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No stories found.</p>
  {{/each}}
</div>